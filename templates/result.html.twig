{% extends 'base.html.twig' %}

{% block body %}
    <div id="main">
        <h2>Nombre de votes : {{ totalVoted }}</h2>
        <h3>Classement des chats les plus minions :</h3>
        <a href="{{ path('cat_mash') }}"><- retour</a>
        <table id="result">
            {% set ranking = 1 %}
            {% for cats in result %}
                <tr>
                    <td><h3>rang {{ ranking }} {% if cats|length > 1 %} (ex-aequo) {% endif %} | {{ cats.0.votedCount }} vote(s):</h3></td>
                </tr>
                <tr>
                    {% for cat in cats %}
                    <td>
                        <img src="{{ cat.url }}" />
                    </td>
                    {% endfor %}
                    {% set ranking = ranking + 1 %}
                </tr>
            {% endfor %}
        </table>
    </div>

    {% block javascripts %}
    {% endblock %}
{% endblock %}
